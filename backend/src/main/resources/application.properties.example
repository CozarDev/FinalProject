# Configuraci贸n para desarrollo local
spring.application.name=backend

# Base de datos MongoDB local
spring.data.mongodb.uri=mongodb://localhost:27017/tu_base_de_datos
spring.data.mongodb.database=tu_base_de_datos

# Configuraci贸n de seguridad JWT
jwt.secret=tu-clave-secreta-jwt-muy-segura-aqui
jwt.expiration=86400000

# Configuraci贸n de Calendarific
calendarific.api.key=tu-api-key-de-calendarific

# Puerto del servidor
server.port=8080

# Configuraci贸n CORS para desarrollo
cors.allowed.origins=*

# Logs para desarrollo
logging.level.com.proyectofinal=DEBUG
logging.level.org.springframework.security=WARN
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# Deshabilitar JPA (usando MongoDB)
spring.autoconfigure.exclude=org.springframework.boot.autoconfigure.jdbc.DataSourceAutoConfiguration,org.springframework.boot.autoconfigure.orm.jpa.HibernateJpaAutoConfiguration 