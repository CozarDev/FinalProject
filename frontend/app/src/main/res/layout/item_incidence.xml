            android:gravity="center_vertical">

            <!-- Indicador de Prioridad -->
            <View
                android:id="@+id/priorityIndicator"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@color/colorAccent" />

            <!-- TÃ­tulo y Emoji de Prioridad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/priorityEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”´"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/incidenceTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TÃ­tulo de la incidencia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Estado -->
            <TextView
                android:id="@+id/incidenceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â³ Pendiente"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- DescripciÃ³n -->
        <TextView
            android:id="@+id/incidenceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DescripciÃ³n de la incidencia..."
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Info Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Prioridad Texto -->
            <TextView
                android:id="@+id/priorityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="@color/white" />

            <!-- Separador -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp" />

            <!-- Fecha de CreaciÃ³n -->
            <TextView
                android:id="@+id/createdDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace 2 dÃ­as"
                android:textSize="12sp"
                android:textColor="@color/colorTextSecondary"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_schedule" />

        </LinearLayout>

        <!-- Info Adicional (Asignado a / Creado por) -->
        <LinearLayout
            android:id="@+id/additionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- Creado por -->
            <TextView
                android:id="@+id/createdByInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ‘¤ Creado por: Juan PÃ©rez"
