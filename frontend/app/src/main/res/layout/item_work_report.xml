<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con fecha y empleado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReportDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“… 15/01/2024"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <!-- Nombre del empleado (visible solo para jefes/admin) -->
        <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ðŸ‘¤ Juan PÃ©rez"
            android:textSize="14sp"
            android:textColor="@color/colorOnSurface"
            android:visibility="gone" />

        <!-- InformaciÃ³n de horarios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTimeRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ• 08:00 - 17:00"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorkedHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â±ï¸ 8h 00m"
                    android:textSize="14sp"
                    android:textColor="@color/colorOnSurface" />

                <TextView
                    android:id="@+id/tvBreakDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â˜• 1h 00m"
                    android:textSize="14sp"
                    android:textColor="@color/colorOnSurface" />

            </LinearLayout>

        </LinearLayout>

        <!-- Observaciones -->
        <TextView
            android:id="@+id/tvObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ“ Observaciones del dÃ­a..."
            android:textSize="14sp"
            android:textColor="@color/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone" />

        <!-- LÃ­nea divisoria sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorDivider"
            android:alpha="0.3" />

        <!-- Footer con indicador de toque -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Toca para ver detalles"
            android:textSize="12sp"
            android:textColor="@color/colorOnSurface"
            android:alpha="0.6"
            android:gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 