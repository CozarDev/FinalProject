<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenedor de estadÃ­sticas -->
        <ScrollView
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š EstadÃ­sticas de Incidencias"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="24dp" />

                <!-- Primera fila: Pendientes e En Curso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Card Pendientes -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPending"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:backgroundTint="@color/colorWarning">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â³"
                                android:textSize="28sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/textPendingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pendientes"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/textPendingPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Card En Curso -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardInProgress"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:backgroundTint="@color/colorInfo">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”§"
                                android:textSize="28sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/textInProgressCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="En Curso"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/textInProgressPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Segunda fila: Resueltas y Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Card Resueltas -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardResolved"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:backgroundTint="@color/colorSuccess">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ…"
                                android:textSize="28sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/textResolvedCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Resueltas"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/textResolvedPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Card Total -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTotal"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:backgroundTint="@color/colorSecondary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“‹"
                                android:textSize="28sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/textTotalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:alpha="0.8" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- InformaciÃ³n adicional -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ˆ Resumen"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Las incidencias pendientes requieren atenciÃ³n inmediata"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Las incidencias en curso estÃ¡n siendo procesadas"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Las incidencias resueltas estÃ¡n completadas"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <!-- Indicador de carga -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:indicatorColor="@color/colorPrimary"
            app:trackColor="@color/colorBackground" />

        <!-- Estado vacÃ­o -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_bar_chart"
                android:alpha="0.3"
                app:tint="@color/colorTextSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No se pudieron cargar las estadÃ­sticas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextSecondary"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Desliza hacia abajo para intentar de nuevo"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:textAlignment="center" />

        </LinearLayout>

    </FrameLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout> 